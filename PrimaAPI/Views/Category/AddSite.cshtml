<partial name="_Notification" />
@model Account

<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Add New Site</h2>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">

    <div class="mb-3">
        <!--Casella Name-->
        <input asp-for="Email" asp-for="idAccount" disabled class="form-control" />      <!--Questo  il campo che serve per aggiungere/modificare il nome. In questo caso viende disabilitato-->
    </div>

</table>

<body>
    <form method="post" asp-controller="Category" asp-action="AddSitePost" >
        <input asp-for="id" hidden/>
        <table>
            <tr>
                <td>Enter the name of the site</td>
                <td><input type="text" id="siteNowStr_id" name="siteNowStr" /></td>
            </tr>
            <tr>
                <td>
                    <button class="btn btn-success" style="width:150px">
                        <i class="bi bi-save"></i>
                        Add new site
                    </button>
                </td>
            </tr>
        </table>
    </form>


    <form method="post" asp-controller="Category" asp-action="AddSitePost" asp-route-id="idAccount">
        <input asp-for="id" hidden />

        <button class="btn btn-secondary" style="width:150px">
            <i class="bi bi-arrow-return-left"></i>
            Back To Home
        </button>
    </form>
    
</body>
