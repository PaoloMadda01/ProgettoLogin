
<partial name="_Notification" />

@model MainModel


<div class="container p-3">
    
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Site List</h2>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:50%">

        <div class="mb-3">
            <input asp-for="Email" asp-for="idAccount" disabled class="form-control" />
        </div>

    </table>


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Site
                </th>

                <th>
                    Date
                </th>

                <th>
                    Delete
                </th>
            </tr>
        </thead>
        
        <tbody>
            
            @for (var i = 0; i < Model.Name.Count; i++)
            {
                
                <tr>
        
                        <td width="50%">
                            @Model.Name.ElementAt(i)
                        </td>
                        <td width="25%">
                            @Model.DateRecording.ElementAt(i).ToString()
                        </td>

                        <td>
                            <!--Per avere il pulsante Delete-->
                            <div class="w-75 btn-group" role="group">

                                <button type="button" class="btn btn-danger" style="width:100px" onclick="openModelBoxDeleteSite()">
                                    <i class="bi bi-trash"></i>
                                    Delete Site
                                </button>


                                <html>
                                    <head>
                                        <title>Model Box Delete Site</title>
                                        <script type="text/javascript">
                                            function openModelBoxDeleteSite() {
                                                var modal = document.getElementById("modelBoxDeleteSite");
                                                modal.style.display = "block";
                                            }
                                    
                                            function closeModelBoxDeleteSite() {
                                                var modal = document.getElementById("modelBoxDeleteSite");
                                                modal.style.display = "none";
                                            }
                                    
                                        </script>
                                    
                                    </head>
                                    
                                    <body>

                                        <div id="modelBoxDeleteSite" class="modal">
                                            <div class="modal-dialog" role="document">
                                                <!-- Modal content -->
                                                <div class="modal-content">
                                    
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Delete Site</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                            <span onclick="closeModelBoxDeleteSite()">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to remove this site from your account?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <form method="post" asp-controller="Category" asp-action="DeleteSite">
                                                            <input type="hidden" name="siteToDeleteString" value="@Model.Name.ElementAt(i)">
                                                            <input type="hidden" name="idAccountNow" value="@Model.idAccount">
                                                            <button class="btn btn-danger" style="width:150px">
                                                                <i class="bi bi-trash"></i>
                                                                Delete Site
                                                            </button>
                                                        </form>

                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closeModelBoxDeleteSite()">
                                                                Close
                                                        </button>
                                                    </div>
                                    
                                                </div>
                                            </div>
                                        </div>
                                    </body>
                                </html>

                            </div>
                        </td>
                </tr>
                
            }
        </tbody>
    </table>
</div>
    
    <div class="translate-middle text-end">
        <form method="post" asp-controller="Category" asp-action="AddSite" asp-route-id="idAccount">
            <input asp-for="idAccount" hidden/>

            <button class="btn btn-success" style="width:150px">
                <i class="bi bi-save"></i>
                Add new site
            </button>
        </form>
    </div>




<table class="table table-bordered table-striped" style="width:100%">
    <tbody>
        <tr>
            <td width="80%">
                Delete All
            </td>

            <td>
                <div class="w-75 btn-group" role="group">
                    <!--Delete-->
                    <button type="button" class="btn btn-danger" style="width:150px" onclick="openModelBoxDeleteAccount()">
                        <i class="bi bi-trash"></i>
                        Delete Account
                    </button>
                </div>
            </td>
        </tr>
    </tbody>
</table>



<a asp-controller="Home" asp-action="Login" button type="submit" class="btn btn-secondary" style="width:130px">
    Log out
</a>








<html>
<head>
    <title>Model Box Delete Account</title>
    <script type="text/javascript">
        function openModelBoxDeleteAccount() {
            var modal = document.getElementById("modelBoxDeleteAccount");
            modal.style.display = "block";
        }

        function closeModelBoxDeleteAccount() {
            var modal = document.getElementById("modelBoxDeleteAccount");
            modal.style.display = "none";
        }

    </script>

</head>

<body>

    <div id="modelBoxDeleteAccount" class="modal">
        <div class="modal-dialog" role="document">
            <!-- Modal content -->
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Delete Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span onclick="closeModelBoxDeleteAccount()">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete your account?</p>
                </div>
                <div class="modal-footer">
                    <form asp-controller="Category" asp-action="DeleteAccount" method="post">
                        <input asp-for="idAccount" hidden />

                        <button class="btn btn-danger" style="width:200px">
                            <i class="bi bi-trash"></i>
                            Delete Account
                        </button>
                    </form>

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close" style="width:150px" onclick="closeModelBoxDeleteAccount()">
                        Close
                    </button>
                </div>

            </div>
        </div>
    </div>
</body>
</html>